<?xml version="1.0" encoding="utf-8"?>
<unit dlc="Supplement7">
	<model>
		<unit mesh="Units/Eldar/VaulsWrathSupportBattery"
				material="Units/Eldar/VaulsWrathSupportBattery"
				idleAnimation="Units/Eldar/VaulsWrathSupportBatteryIdle"
				idleAnimationCount="3"
				idleContinuously="1"
				scale="0.9 0.9 0.9"
				bloodBone="VaulsWrath_Spotter_Chest"
				explosionsBone="VaulsWrath_Platform"/>
	</model>
	<group size="2" rowSize="2" memberDeltaX="100" memberDeltaY="100"/>
	<weapons>
		<weapon name="ShadowWeaver">
			<model>
				<beamWeapon muzzleBone="VaulsWrath_CannonMuzzle"
						fireInterval="10.0"/>
			</model>
		</weapon>
	</weapons>
	<modifiers>
		<modifier visible="0">
			<effects>
				<armor base="6"/> <!-- %armor base armor=4+ -->
				<hitpointsMax base="8.0"/> <!-- %hitpointsMax base toughness=5 wounds=2 -->
				<meleeAccuracy base="8"/> <!-- %meleeAccuracy base weaponSkill=4 -->
				<meleeAttacks base="1"/>
				<strengthDamage base="1"/> <!-- %strengthDamage base strength=3 -->
				<moraleMax base="8"/> <!-- %moraleMax base leadership=7 -->
				<movementMax base="3"/>
				<oreCost base="60.0"/> <!-- %oreCost base tier=7 factor=1 -->
				<oreUpkeep base="3.0"/> <!-- %oreUpkeep base tier=7 factor=1 -->
				<productionCost base="42.0"/> <!-- %productionCost base tier=7 factor=1 -->
				<rangedAccuracy base="8"/> <!-- %rangedAccuracy base ballisticSkill=4 -->
			</effects>
		</modifier>
	</modifiers>
	<strategyModifiers>
		<modifier>
			<effects>
<increaseVehiclesScore base="0.9"/>
<increaseSupportScore base="0.9"/>
			</effects>
		</modifier>
	</strategyModifiers>

	<actions>
		<attack>
			<model>
				<action	animation="Units/Eldar/VaulsWrathSupportBatteryAttack"
						beginFire="1.0"
						endFire="1.1"/>
			</model>
		</attack>
		<die>
			<model>
				<action animation="Units/Eldar/VaulsWrathSupportBatteryDie"
						animationCount="2"
						sound="Units/SmallVehicleDie"
						soundCount="3"
						soundDelay="0"
						voiceSound="Units/Eldar/MaleInfantryDie"
						voiceSoundCount="10"/>
			</model>
		</die>
		<idle>
			<model>
				<action animationSpeed="1.0"/>
			</model>
		</idle>
		<move>
			<model>
				<action animation="Units/Eldar/VaulsWrathSupportBatteryMove"
						sound="Units/Eldar/SkimmerMove"
						soundCount="1"/>
			</model>
		</move>
		<webwayTravel name="Eldar/WebwayTravel">
			<model>
				<action sound="Actions/WebwayTravel"/>
			</model>
			<modifiers>
				<modifier visible="0">
					<effects>
						<influenceCost base="20"/>
					</effects>
				</modifier>
				<modifier requiredUpgrade="Eldar/WebwayGateBonus2">
					<effects>
						<consumedActionPoints max="0"/>
					</effects>
				</modifier>
			</modifiers>
		</webwayTravel>

		<!-- PC Clear Tile -->
		<clearTileUnitAbility cooldown="1"
				icon="Actions/ClearTile"
				useConditionsForVisiblity="1"
				name="ClearTile">
			<conditions>
				<player>
					<notAIControlled/>
				</player>
			</conditions>
			<beginTargets>
				<target rangeMax="1">
					<conditions/>
					<areas/>
				</target>
			</beginTargets>
			<modifiers>
				<modifier visible="0">
					<effects>
						<influenceCost base="5"/>
						<oreCost base="5"/>
					</effects>
				</modifier>
			</modifiers>
		</clearTileUnitAbility>

		<!-- AI Clear Tile -->
		<incursion 
				name="Worthy/ClearTile"
				icon="Actions/ClearTile"
				useConditionsForVisiblity="1"
				cooldown="1">
			<conditions>
				<player>
					<aiControlled/>
				</player>
			</conditions>
			<modifiers>
				<!-- prevent AI overuse -->
				<modifier visible="0">
					<conditions match="Any">
						<player>
							<influence less="85"/>
						</player>
						<unit>
							<noTrait name="Worthy/Ai_alone1"/>
						</unit>
					</conditions>
					<effects>
						<consumedActionPoints add="99"/>
					</effects>
				</modifier>
				<modifier visible="0">
					<effects>
						<influenceCost base="5"/>
						<oreCost base="5"/>
					</effects>
				</modifier>
			</modifiers>
			<beginTargets>
				<target rangeMax="1">
					<conditions>
						<tile>
							<feature name="WireWeed"/>
							<noEnemyUnit/>
						</tile>
					</conditions>
					<areas>
						<area affects="Tile">
							<modifiers>
								<modifier>
									<effects>
										<removeFeature name="WireWeed"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</target>
				<selfTarget>
					<areas>
						<area affects="Unit">
							<modifiers>
								<modifier visible="0">
									<effects>
										<removeTrait name="Worthy/Ai_patience"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>

		</incursion>

		<!-- release patience -->
		<dispenseChaff
			name="Worthy/Ai_release"
			icon="Traits/Eldar/InfluenceBuildingBonus"
			passive="0"
			cooldown="1"
			requiredActionPoints="1"
			consumedActionPoints="0"
			useConditionsForVisiblity="1">
			<conditions>
				<player><aiControlled/></player>
				<unit>
					<noTrait name="Worthy/Ai_mark3"/>
					<trait name="Worthy/Ai_patience"/>
				</unit>
			</conditions>
			<beginTargets>
				<selfTarget>
					<areas>
						<area affects="Unit">
							<modifiers>
								<modifier>
									<effects>
										<removeTrait name="Worthy/Ai_patience"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
				</selfTarget>
			</beginTargets>
		</dispenseChaff>

	
	</actions>

	<traits>
		<trait name="Eldar/AncientDoom"/>
		<trait name="Eldar/BattleFocus"/>
		<trait name="ExtraVehicleArmour" requiredUpgrade="Eldar/ExtraVehicleArmour"/>
		<trait name="Fleet"/>
		<trait name="Eldar/SpiritPreservation"/>
		<trait name="VeryBulky"/>
	
		<trait name="Worthy/Ai_mark3"/>
		<trait name="Worthy/Ai_elfstrike"/>
		<trait name="Worthy/Ai_alone1"/>
	
	</traits>

</unit>
