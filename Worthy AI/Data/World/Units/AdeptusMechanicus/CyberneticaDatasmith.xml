		<incursion 
				name="Worthy/ClearTile"
				icon="Actions/ClearTile"
				useConditionsForVisiblity="1"
				cooldown="1">
			<model>
				<action animation="Units/AdeptusMechanicus/CyberneticaDatasmithAbility"/>
			</model>
			<conditions>
				<player>
					<aiControlled/>
					<noFaction name="Neutral"/>
				</player>
			</conditions>
			<modifiers>
				<!-- prevent AI overuse -->
				<modifier visible="0">
					<conditions match="Any">
						<player>
							<influence less="85"/>
						</player>
						<unit>
							<noTrait name="Worthy/Ai_alone1"/>
						</unit>
					</conditions>
					<effects>
						<consumedActionPoints add="99"/>
					</effects>
				</modifier>
				<modifier visible="0">
					<effects>
						<influenceCost base="5"/>
						<oreCost base="5"/>
					</effects>
				</modifier>
			</modifiers>
			<beginTargets>
				<target rangeMax="1">
					<conditions>
						<tile>
							<feature name="WireWeed"/>
							<noEnemyUnit/>
						</tile>
					</conditions>
					<areas>
						<area affects="Tile">
							<modifiers>
								<modifier>
									<effects>
										<removeFeature name="WireWeed"/>
									</effects>
								</modifier>
							</modifiers>
						</area>
					</areas>
